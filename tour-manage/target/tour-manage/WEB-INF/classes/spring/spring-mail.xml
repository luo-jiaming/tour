<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/mvc http://www.springframework.org/schema/mvc/spring-mvc-3.1.xsd
		http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.1.xsd
		http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.1.xsd">

    <bean name="mailConfig" class="cn.edu.hlju.tour.core.utils.MailConfig">
        <property name="senderEmail" value="${senderEmail}" />
        <property name="senderPassword" value="${senderPassword}" />
        <property name="senderEmailSMTPHost" value="${senderEmailSMTPHost}" />
        <property name="smtpAuth" value="${smtpAuth}" />
        <property name="transportProtocol" value="${transportProtocol}" />
    </bean>

</beans>